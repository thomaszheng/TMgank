<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:minHeight="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_alignLeft="@id/icon"
            android:layout_alignStart="@id/icon"
            android:textColor="@color/material_grey_600"
            android:layout_margin="5dp"
            android:text="@string/test_user"
            android:textSize="@dimen/material_body" />

        <TextView
            android:id="@+id/who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon"
            android:layout_alignEnd="@id/icon"
            android:layout_alignRight="@id/icon"
            android:layout_margin="5dp"
            android:text="@string/test_user"
            android:textColor="@color/material_grey"
            android:textSize="@dimen/material_caption" />
    </RelativeLayout>

</android.support.v7.widget.CardView>